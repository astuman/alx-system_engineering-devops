#!/usr/bin/env bash
# install load balancer in ubuntu server
apt-get -y install software-properties-common
add-apt-repository -y ppa:vbernat/haproxy
apt-get -y update
apt-get -y install haproxy
sed -i '/errorfile 504/a listen thelaura' /etc/haproxy/haproxy.cfg
sed -i '/listen thelaura/a bind :80' /etc/haproxy/haproxy.cfg
sed -i '/bind :80/a mode http' /etc/haproxy/haproxy.cfg
sed -i '/mode http/a server 40998-web-01 54.173.84.88:80 check' /etc/haproxy/haproxy.cfg
sed -i '/server 40998-web-01 54.173.84.88:80 check/a server 40998-web-02 34.204.61.191:80 check' /etc/haproxy/haproxy.cfg
sed -i '/#EXPORTS="-de -m 16"/a ENABLED=1' /etc/haproxy/haproxy.cfg
service haproxy start
